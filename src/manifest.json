{
	"name": "CVD Anderton Extension",
	"version": "{VERSION}",
	"manifest_version": 2,
	"description": "This extension adapts the content of visited pages to the specific needs of VISIONARY users...",
	"homepage_url": "https://colour-blindness.org",
	"default_locale": "en",
	"icons": {
		"16": "assets/images/icons/icon16.png",
		"48": "assets/images/icons/icon48.png",
		"128": "assets/images/icons/icon128.png"
	},
	"permissions": [
		"contextMenus",
		"declarativeContent",
		"<all_urls>",
		"tabs",
		"storage",
		"identity",
		"http://*/*",
		"https://*/*"    
	],
	"background": {
		"scripts": [
			"bg/chrome_ex_oauthsimple.js",
			"bg/chrome_ex_oauth.js",
			"bg/background.js"
		]
	},
	"browser_action": {
		"default_icon": "assets/images/icons/icon19.png",
		"default_title": "browser action demo",
		"default_popup": "index.html"
	},
	"oauth2": {
		"client_id": "368063427013-ltnpiq8efno16upv0as5ebvnqt814riv.apps.googleusercontent.com",
		"scopes": [
			"https://www.googleapis.com/auth/drive"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://*/*", "http://*/*"
			],
			"css": [
				"contentscript/inject.css"
			]
		},
		{
			"matches": ["https://*/*", "http://*/*"],
			"js": [
				"assets/js/vendors/jquery-3.1.1.min.js",
				"assets/js/vendors/notify.min.js",
				"assets/js/vendors/Vibrant.js",
				"assets/js/vendors/color-thief.min.js",
				"contentscript/mutagen.js"
			]
		}
	]
}
